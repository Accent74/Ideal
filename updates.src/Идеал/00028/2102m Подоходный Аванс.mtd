Sub Method_OnCalc(Tr)
	Dim s

	With Tr
		.Tariff = .DependsW.Sum
		s = .Tariff * .Sum2 / 100
		.Sum1 = s
		.Sum = s
	End With

End Sub

Sub Method_OnApply(Tr)
	With Tr
		.Sum2 = 13	' 13% 		ставка подоходного налога
	End With
End Sub
