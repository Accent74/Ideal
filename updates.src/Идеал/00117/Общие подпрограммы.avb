Function EnumIDByName(EnumID, EnumName)
	Dim i
	Dim En

	Set En = WorkArea.Enum(CLng(EnumID))

	For i = 1 To En.Count
		If En.ItemName(i) = EnumName Then
			EnumIDByName = En.ItemID(i)
		End If
	Next
	
End Function
'==============================================

Function EnumIndexByID(EnumID, ID)
	Dim i
	Dim En

	Set En = WorkArea.Enum(CLng(EnumID))

	For i = 1 To En.Count
		If En.ItemID(i) = ID Then
			EnumIndexByID = i
			Exit Function
		End If
	Next

	EnumIndexByID = 0
	
End Function
'==============================================
Function GetTableHours(ttID, ttDate)
	Dim Rs, SQL

	SQL = "select TTV_Hours " & _
			"from TIME_TABLE_VALUES as t " & _
			"Left Join P_PERIOD as p On p.pp_id = t.PP_ID " & _
			"where  " & _
			"	p.PP_YEAR = " & Year(ttDate) & _
			"	And p.PP_MONTH = " & Month(ttDate) & _
			"	And t.TT_ID = " & ttID

	Set Rs = GetRS(SQL)

	If Not Rs.EOF Then
		GetTableHours = Rs.Fields(0).Value / 10
	Else
		GetTableHours = 0
	End If
	
End Function
'==============================================
Function GetTableDays(ttID, ttDate)
	Dim Rs, SQL

	SQL = "select TTV_Days " & _
