Function IsAgDismiss(Ag, TrPeriod)
	Dim mm, yy
	Dim DateOut

	If IsNull(Ag.Prop(PROP_UVOLEN)) Then
		IsAgDismiss = False
	Else
		DateOut = Ag.Prop(PROP_UVOLEN)
		mm = Month(DateOut)
		yy = Year(DateOut)
		IsAgDismiss = Month(TrPeriod.firstday) = mm And Year(TrPeriod.firstday) = yy
	End If

End Function
