	Else
		GetTableDays = 0
	End If
	
End Function
'==============================================
Function GetRS(sql) ' простая инициализация
	Dim db,qd 	' для ADO
	Dim cn,cmd	' для SQLMsgBox SQL

	Select Case app.appType
		Case "DAO":
			Set GetRS = WorkArea.DAODataBase.OpenRecordset(sql)
		Case "OLEDB", "SQL" :

			sql = Replace(sql, Chr(34), "'")

			Set cn = WorkArea.ADOConnection
			Set cmd = CreateObject("AdoDb.Command")
			Set cmd.ActiveConnection = cn
			cmd.commandText = sql
			Set GetRS = cmd.execute
	End Select
	' передаём созданный RS в основную программу	
End Function

