'---
Sub AddFactValues(PropItem, AgFact, Logic)
	Dim i, Hist

	Hist = AgFact.History

	For i = 0 To UBound(Hist, 2)
		If Not IsNull(Hist(1, i)) Then
			If Logic Then
				PropItem.SetValue iif(Hist(1, i) = "Да", 0, 1), Hist(0, i)
			Else
				PropItem.SetValue Hist(1, i), Hist(0, i)
			End If
		End If
	Next

End Sub
'---
'
'---
Sub LoadAgProps(Ag)
	Dim i

	With Ag.Properties
		For i = 1 To .Count
			With .Item(i)	
				If Not AgProps.Exists(.Name) Then
					AgProps.Add .Name, i
				End If
			End With
		Next
	End With

End Sub
'---
'
'---
Function MyJoin(ArrayStr, StartPos, EndPos)
	Dim i, RetValue

	RetValue = ""

	For i = StartPos To EndPos
		RetValue = RetValue & ArrayStr(i) & " "
	Next
	
	MyJoin = Trim(RetValue)
End Function
'---
'
'---
Function GetEnumID(EnumValue, EnumName)
	Dim i

	With workarea.enum(EnumName)
		For i = 1 To .Count
			If .ItemName(i) = EnumValue Then
				GetEnumID = .ItemID(i)
				Exit Function
			End If
		Next		

	End With

	GetEnumID = 0

End Function
