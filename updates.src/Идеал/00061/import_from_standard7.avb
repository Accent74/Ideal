Sub 	SetProps(Ag, NewAg)
	Dim PassNo, AgFacts, EnID, enName, PassDate

	If AgProps.Count = 0 Then
		LoadAgProps NewAg
	End If

	Set AgFacts = Ag.Facts(Now)

	With NewAg.Properties
		.Item(AgProps("ИНН")).SetValue									Ag.VatNo
		.Item(AgProps("Табельный номер")).SetValue 				Ag.TabNo
		.Item(AgProps("Фамилия")).SetValue 							Trim(Token(Ag.Name, 1, " "))
		.Item(AgProps("Имя")).SetValue 									Trim(Token(Ag.Name, 2, " "))
		.Item(AgProps("Отчество")).SetValue 						Trim(Token(Ag.Name, 3, " "))

		If Ag.Params.Exists("Пол") Then
			.Item(AgProps("Пол")).SetValue 									iif(Ag.Params("Пол").Value2 = "М", 0, 1)
		End If

		.Item(AgProps("Дата рождения")).SetValue 				Ag.Params("Дата рождения").Value2
		.Item(AgProps("Дата выхoда на пенсию")).SetValue	AgFacts.Item("Пенсионер").ActualDate
		.Item(AgProps("Дата приема")).SetValue						Ag.DateIn
		.Item(AgProps("Дата увольнения")).SetValue				Ag.DateOut
		.Item(AgProps("Признак дохода")).SetValue				GetEnumID(AgFacts.Item("Признак дохода").Value2, "Признак дохода")
		.Item(AgProps("Признак льготы")).SetValue				GetEnumID(AgFacts.Item("Признак льготы").Value2, "Признак льготы")

		.Item(AgProps("Адрес")).SetValue								Ag.Address
		.Item(AgProps("Телефон")).SetValue							Ag.Phone
		.Item(AgProps("Профсоюз")).SetValue							iif(AgFacts.Item("Расчитывать профсоюз").Value2 = "Да", 1, 0)

		If Ag.Params.Exists("№ картсчета") Then
			.Item(AgProps("Номер карточки")).SetValue				Ag.Params("№ картсчета").Value2
		End If

		.Item(AgProps("Процент алиментов")).SetValue			AgFacts.Item("% алиментов").Value2
		.Item(AgProps("График")).SetValue								1	'	основной график
		.Item(AgProps("Инвалид")).SetValue							AgFacts.Item("Инвалидность").Value2

		AddFactValues .Item(AgProps("Количество детей")), AgFacts.Item("К-во детей"), False
		AddFactValues .Item(AgProps("Оклад")), AgFacts.Item("Оклад"), False
		AddFactValues .Item(AgProps("Должность")), AgFacts.Item("Должность"), False

		If AgFacts.exists("Cпецстаж") Then
			AddFactValues .Item(AgProps("Спецстаж")), AgFacts.Item("Cпецстаж"), True
		End If

		PassNo = Split(Ag.Passport, " ")	
		If UBound(PassNo) > 2 Then
			.Item(AgProps("Серия и № паспорта")).SetValue			Trim(PassNo(0)) & " " & Trim(PassNo(1)) 
			.Item(AgProps("Кем выдан")).SetValue						MyJoin(PassNo, 2, UBound(PassNo) - 1)
			PassDate = Trim(PassNo(UBound(PassNo)))

			If IsDate(PassDate) Then
				.Item(AgProps("Дата выдачи")).SetValue CDate(PassDate)
			End If

		End If

		EnID = AgFacts.Item("Характер работ").Value2

		If EnID <> 0 Then
			enName = acc.enum("Характер работ").ItemNameID(EnID)
		Else
			enName = ""
		End If

		Select Case enName
			Case "Гражданско-правовой договор", _
					"Гражданско-правовой договор (стор.)", _
					"Трудовое соглашение"
				.Item(AgProps("Трудовой договор")).SetValue 1
			Case "По совместительству"
				.Item(AgProps("Совместитель")).SetValue 1
		End Select 
	End With
End Sub
