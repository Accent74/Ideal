Sub Method_OnCalc(Tr)
	Dim s

	With Tr
		s = .Tariff * .Sum2 / 100
		.Sum1 = s
		.Sum = s
	End With

End Sub

Sub Method_OnApply(Tr)
	With Tr
		.Sum2 = 0.5	' 0.5% 		Соцстрах 
	End With
End Sub