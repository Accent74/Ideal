Sub Main(Updater)
	Dim FormID

	If Not AddAgProps("Прочие", "% оклада для аванса", 3, 6) then
		Updater.Fail = true
		Updater.WriteLog "Ошибка добавления свойства корреспондента."
		exit Sub
	end If

	With Workarea
		With .Code(.GetCodeID("2142m"))
			.SetScript(GetTextFromFile("2142m Проф. взнос Аванс.mtd"))
			.MethodType = 2
			.Save
		end With

		With .Code(.GetCodeID("2133m"))
			.SetScript(GetTextFromFile("2133m Безработица Аванс.mtd"))
			.MethodType = 2
			.Save
		end With

		With .Code(.GetCodeID("2132m"))
			.SetScript(GetTextFromFile("2132m Соцстрах Аванс.mtd"))
			.MethodType = 2
			.Save
		end With

		With .Code(.GetCodeID("2102m"))
			.SetScript(GetTextFromFile("2102m Подоходный Аванс.mtd"))
			.MethodType = 2
			.Save
		end With

		With .Code(.GetCodeID("3020m"))
			.SetScript(GetTextFromFile("3020m Аванс.mtd"))
			.MethodType = 2
			.Save
		end With

		With .Code(.GetCodeID("0320a"))
			.MethodType = 0
			.Save
		End With

		FormID = AddProjItem(1, "Идеал справка о доходах", "Идеал_справка_о_доходах.afm")
		AddFolder "Прочее", "Справка о доходах", FormID, "СОД"

		.UserParam("CONFIG_DBVERSION1") = 19
	End With
End Sub

