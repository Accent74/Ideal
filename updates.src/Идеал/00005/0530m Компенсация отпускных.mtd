Sub Method_OnCalc(Tr)
	With Tr
		.Sum = .Tariff
		.DbCode = .Long1
	End With
End Sub

Sub Method_OnApply(Tr)
	With Tr
		If .AgID=0 Then Exit Sub
		SetDb(Tr)
	End With
End Sub