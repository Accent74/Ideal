'________________________________________________
' String right-justified
Function StrRightJstfd( s, Length, Fillchar )
	Dim AddLen

	AddLen = Length - Len( s )

	If AddLen > 0 Then
		StrRightJstfd = String( AddLen, Fillchar ) & s
	ElseIf  AddLen < 0 Then
		StrRightJstfd = Left( s, Length)
	Else
		StrRightJstfd = s
	End If

End Function

