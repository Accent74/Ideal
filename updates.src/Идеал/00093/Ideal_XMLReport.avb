Function GetTaxDeptCodes( ByRef m )
	With Workarea.UTable( Workarea.GetSysUTableID( "ДРП" ))
		m( "C_STI" ) = .GetValue( 1, "Код ГНИ", 2 )
		m( "T_STI" ) = .GetValue( 1, "Тип ГНИ", 2 )
		m( "C_REG" ) = .GetValue( 1, "ГНИ Код области", 2 )
		m( "C_RAJ" ) = .GetValue( 1, "ГНИ Код района", 2 )
	End With

	If ( Len( Trim( m( "C_STI" ))) = 0 ) Or ( Len( Trim( m( "C_STI" ))) = 0 ) Or ( Len( Trim( m( "C_REG" ))) = 0 ) Or ( Len( Trim( m( "C_RAJ" ))) = 0 ) Then
		MsgBox "Укажите дополнительные свойства предприятия", vbExclamation, "Внимание"
		GetTaxDeptCodes = False
	Else
		GetTaxDeptCodes = True
	End If
End Function

