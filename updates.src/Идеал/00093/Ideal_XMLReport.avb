'________________________________________________
Function ToDGDate( d )
	Select Case VarType( d )
		Case vbString
			If d = "" Or d = "//" Then
				ToDGDate = ""
			Else
				ToDGDate = Replace( FormatDate2( d, "dd/mm/yyyy" ), "/", "" )
			End If
		Case Else
			If d = 0 Then
				ToDGDate = ""
			Else
				ToDGDate = Replace( FormatDate2( d, "dd/mm/yyyy" ), "/", "" )
			End If
	End Select
End Function

