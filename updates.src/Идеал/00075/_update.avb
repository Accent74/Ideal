Sub CreateCode(updater)
	Dim Fld, NewCodeRoot, NewCode
	Dim RD, FileName

	Set Fld = GetFolder("24 Обязательные 2011", Workarea.Codes)

	If Not Fld Is Nothing Then
		If Workarea.GetCodeID("2450") = 0 Then
			Set NewCodeRoot = Fld.Children.Create(102, "2450", "ЕСВ (декретные)")
			NewCodeRoot.DbCode = 661 
			NewCodeRoot.DbCode = 657
			NewCodeRoot.Save

			If Not NewCodeRoot Is Nothing Then
				updater.writelog "Добавлен код 2450 'ЕСВ (декретные)'"
			Else
				updater.writelog "Невозможно добавить код 2450 'ЕСВ (декретные)'"
				updater.fail = True
			End If
		Else
			Set NewCodeRoot = Workarea.Code("2450")
		End If
	Else
		updater.writelog "Папка '24 Обязательные 2011' в списке кодов начислений не найдена"
		updater.fail = True
	End If

	If Workarea.GetCodeID("2451") = 0 Then
		Set NewCode = NewCodeRoot.Children.Create(200, "2451", "ЕСВ (декретные)")
	
		If Not NewCode Is Nothing Then
			updater.writelog "Добавлен метод 2451 'ЕСВ (декретные)'"
			NewCode.MethodType = 2
			NewCode.Save
		Else
			updater.writelog "Невозможно добавить метод 2451 'ЕСВ (декретные)'"
			updater.fail = True
		End If
	End If

	updater.refresh

End Sub
