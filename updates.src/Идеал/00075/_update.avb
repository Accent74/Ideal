Sub AddFotmethods(updater)
	Dim Fld, CodeFOT

	Set Fld = GetFolder("Отчеты", workarea.codes)
	If Not Fld Is Nothing Then 
		CreateFOTCode2 "0048", "ЕСВ 2013 (декретные)", 9, Fld.Children, CodeFOT, updater
	Else
		updater.writelog "Папка 'Отчеты' в списке кодов начислений не найдена"
		updater.fail = True
	End If

	Set Fld = GetFolder("ФОТ", workarea.codes)
	If  Not Fld Is Nothing Then 
		CreateFOTCode2 "2004", "ЕСВ декретные (33.2%)", 1, Fld.Children, CodeFOT, updater
		CodeFOT.Percent = 33.2
		CodeFOT.Threshold = 14115
		CodeFOT.dbCode = 653
		CodeFOT.Save

		CreateFOTCode2 "2005", "ЕСВ декретные инвалиды (8.41%)", 2, Fld.Children, CodeFOT, updater
		CodeFOT.Percent = 8.41
		CodeFOT.Threshold = 14115
		CodeFOT.dbCode = 653
		CodeFOT.Save

	Else
		updater.writelog "Папка 'ФОТ' в списке кодов начислений не найдена"
		updater.fail = True
	End If
End Sub
