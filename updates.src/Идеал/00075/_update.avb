Sub Main(Updater)

	updatetables updater
	AddFotmethods updater
	CreateCode updater

	updatemethod Workarea.GetCodeID("0110ч"), "0110ч Должностной оклад (часы).mtd", updater
	updatemethod Workarea.GetCodeID("0117-02"), "0117-02 Начислен аванс с 01.01.2011.mtd", updater
	updatemethod Workarea.GetCodeID("0430w"), "0430w Больничные по беременности.mtd", updater
	updatemethod Workarea.GetCodeID("2451"), "2451 ЕСВ (декретные).mtd", updater

	CheckDEpends Array("2420", "0046", "2002"), Array("0430"), False, updater
	CheckDEpends Array("2450", "0048", "2004", "2005"), Array("0430"), True, updater

	If Not updater.fail Then 
		If MsgBox("Показать что нового в программе ?", vbInformation + vbOKCancel, "Акцент-заработная плата Идеал") = vbOK Then
			ShowWhatsNew "WhatNewIdeal.chm", "075.htm"
		End If
	Else
		MsgBox "В процессе установки обновления произошли ошибки." & vbNewLine & _
					"Смотрите в log-файле более детальную информацию.", vbCritical, "Акцент. Установка обновлений"
	End If

End Sub
