Function GetPverSum(AgID, CodeID, nMonth, nYear)
	Dim pfind
	Dim pTransColl

	Set pfind = Workarea.CreateIntObject("PFinder")
	Set pTransColl = pfind.FindPTrans("agent_code_c", AgID, CodeID, nMonth, nYear)

	GetPverSum = pTransColl.RawSum
End Function
