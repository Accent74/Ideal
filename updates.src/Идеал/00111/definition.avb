Function GetPeriodID(nMonth, nYear)
	Dim rs,sql

	sql = "Select PP_ID from P_PERIOD Where PP_MONTH=" & nMonth & " and PP_YEAR = " & nYear

	InitRS rs, sql 

	If Not rs.eof Then
		GetPeriodID = Rs.Fields(0).Value
	Else
		GetPeriodID = 0
	End If

End Function
