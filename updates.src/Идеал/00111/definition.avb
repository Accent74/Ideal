Function IsAgIsIll(Ag, Period) 
	Dim Sum, aCodes, i

	Sum = 0
	aCodes = Array("0410", "0420", "0430", "0440", "0450")

	For i = 0 To UBound(aCodes)
		Sum = GetSumAgByMtdPP(Ag.ID, workarea.GetCodeID(aCodes(i)), Period)
		If Sum <> 0 Then
			IsAgIsIll = True
			Exit Function
		End If
	Next

	IsAgIsIll = False
End Function

