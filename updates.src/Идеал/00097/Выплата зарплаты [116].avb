Sub Method_OnApply(Tr)
	Dim nType
	Dim PrevSum
	Dim TotalSum

	With Tr
		If .AgID = 0 Then Exit Sub
		If .ApplySource <> "Long3" And .ApplySource <> "AgentID" Then Exit Sub

		If .ApplySource = "Long3" Then
			If Not .Long3 Then
				.Tariff = .Sum1
			Else
				.Tariff = Int(.Sum1)
			End If
			Exit Sub
		End If

		TotalSum = ideal_GetAgentSum(.AgID, .WPeriod.ID) '- PrevSum

		If TotalSum < 0 Then 
			.Tariff = 0
			.Sum1 = 0
		Else
			.Tariff = TotalSum
			.Sum1 = TotalSum
		End If

		.Long2 = True ' Выплачена

		If .Long1 = 0 Then
			nType = .Agent.Prop(PROP_DISDOHOD_TAG)

			If nType = 0 Then
				.Long1 = 1
			Else
				.Long1 = nType
'				.Long1 = EnumIndexByID(ENUM_DISDOHOD, nType)
			End If
		End If

	End With
End Sub
