Sub Method_OnCalc(Tr)
	With Tr
		If .Long1 <> 0 Then
			If Not .Long3 Then
				.Sum = .Tariff
			Else
				.Tariff = Int(.Tariff)
				.Sum = .Tariff
			End If
		Else
			.Sum = 0
		End If
	End With
End Sub

