Sub addparameters
	Dim Op, Tr

	Set Op = Workarea.CreateDocument
	Set Tr = Op.TransRM(1, 1)

	With Tr.Params
		If Not .Exists("Long7") Then .Create vbLong, "Long7"
	End With

End Sub
