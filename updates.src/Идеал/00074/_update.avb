Sub addreport(updater)
	Dim AgID

	AgID = workarea.browse(acAgent,0,,,"Выберите корреспондента Моя фирма")

	If AgID = 0 Then
		updater.writelog "Корееспондент Моя фирма не выбрал. Невозможно добавить отчет."
		updater.fail = True
	Else
		AddReport2 "Расчетная ведомость 2013", "Расчетная ведомость2013.ash", 1, AgID, updater
	End If
End Sub
