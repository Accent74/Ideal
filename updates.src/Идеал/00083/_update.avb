Sub updatemethods(updater)
	Dim CodeID

	CodeID = Workarea.GetCodeID("3020m")

	If CodeID <> 0 Then
		updatemethod CodeID, "3020m Выплата аванса.mtd", updater
	Else
		updater.writelog "Внимание ! Не найден код 3020m для обновления"
	End If

End Sub
