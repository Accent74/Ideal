Sub UpgradeForms(updater)
	Dim FldRootID, FldRoot

	If updater.fail Then Exit Sub

	AddFormAndFolder "Выплаты", "1. Аванс развернуто c 03.08.14", "Идеал_Аванс_развернуто с 03082014", updater
	AddFormAndFolder "Выплаты", "2. Аванс развернуто c 03.08.14 (сумма вручную)", "Идеал_Аванс_развернуто с 03082014 (сумма вручную)", updater
	AddFormAndFolder "Выплаты", "3. Аванс развернуто c 03.08.14 (шахтеры)", "Идеал_Аванс_развернуто с 03082014 (шахтеры)", updater

	FldRootID = FindFolderID("Выплаты", workarea.folders)

	If FldRootID = 0 Then
		Set FldRoot = Workarea.Folders
	Else
		Set FldRoot = workarea.folder(FldRootID).Children
	End If

	MoveFolder "Аванс развернуто с 01012011", "Архив", FldRoot, updater
	MoveFolder "Аванс развернуто с 01012011 (сумма вручную)", "Архив", FldRoot, updater
	MoveFolder "Аванс развернуто с 01012011 (шахтеры)", "Архив", FldRoot, updater
	MoveFolder "Аванс развернуто", "Архив", FldRoot, updater
	MoveFolder "Аванс", "Архив", FldRoot, updater

End Sub
