Sub AddMenuAction(updater)
	Dim MA
	Dim MA_Item

	Set MA = New mActions
	
	Set MA_Item = MA.ItemByName("Сервис")

	If MA_Item Is Nothing Then
		Set MA_Item = MA.Root.Create("Сервис", "", 0, MA.Root.count + 1)
	End If

	If Not MA_Item Is Nothing Then
		If MA.ItemByName("Резервное копирование") Is Nothing Then
			MA_Item.Children.Create "Резервное копирование", "ST7_BackupDB.adg", 1, MA.Root.count + 1
		End If
	End If

	MA.Save
End Sub
