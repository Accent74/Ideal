Sub add_update_system(updater, EnID, EnYes)
	If updater.fail Then Exit Sub

	With Workarea.Params
		If Not .Exists("Проверять обновления") Then
			.CreateRef "Проверять обновления", 18, EnID
		End If
	End With

	Workarea.UserParam("CONFIG_CODE1") = "PI7"
	workarea.params("Проверять обновления").value2 = EnYes
	Workarea.UserParam("BackUpMode") = 1

End Sub
