Sub add_enum_logic(updater, EnID, EnYesID)
	Dim En, CString, i, Rs

	Set En = Add_Enums("Логика", updater)
	If updater.fail Then Exit Sub

	If En Is Nothing Then
		Set Rs = RunSQL("select enn_id from enum_names where enn_name='Логика'")

		If Rs.eof Then 
			updater.writelog "Не найдено перечисление Логика"
			updater.fail = True
			Exit Sub
		End If

		EnID = Rs.Fields(0).Value

		If App.AppType = "DAO" Then
			Workarea.DAODAtaBase.Execute "insert into enums (enn_id, enm_name) values (" & EnID & ",'ДА')"
			Workarea.DAODAtaBase.Execute "insert into enums (enn_id, enm_name) values (" & EnID & ",'НЕТ')"
		Else
			RunSQL "insert into enums (enn_id, enm_name) values (" & EnID & ",'ДА')"
			RunSQL "insert into enums (enn_id, enm_name) values (" & EnID & ",'НЕТ')"
		End If

		Set Rs = RunSQL("select enm_id from enums where enn_id=" & EnID & " and enm_name='ДА'")

		If rs.eof Then
			EnYesID = 0
		Else
			EnYesID = Rs.Fields(0).Value
		End If

	Else
		CString = UCase(En.ComboString)
		
		If InStr(CString, "НЕТ") = 0 Then En.Create "НЕТ", ""
	
		If InStr(CString, "ДА") = 0 Then 
			EnYesID = En.Create("ДА", "")
		Else
			For i = 1 To En.Count
				If En.ItemName(i) = "ДА" Then
					EnYesID = En.ItemID(i)
					Exit Sub
				End If
			Next
		End If

		EnID = En.ID
	End If

End Sub
