Function Filldepartment3(Op, mArray, Flag)
	Dim i, j
	Dim AgRoot
	Dim RowNo
	Dim s
	Dim AgID
	Dim dFirst, dLast
	Dim dIn, Dout

	Op.Pack2 GetRef("DeleteAllRows")
	dFirst = Op.wperiod.firstday
	dLast = Op.wperiod.lastday
	RowNo = 0

	With WorkArea.Agent(Op.OrgID)
		If Flag Then
			Set AgRoot = .Nested
		Else
			Set AgRoot = .Children
		End If
	End With

	For i = 1 To AgRoot.Count
		With AgRoot.Item(i)
			If .Type = 3 Then
				dIn = .Prop("Дата приема")
				Dout = .Prop("Дата увольнения")

				If (dIn <= dLast Or dIn = 0) And (Dout >= dLast Or Dout = 0) Then
					AgID = .ID
					RowNo = RowNo + 1

					For j = 0 To UBound(mArray)
						With op.TransRM(RowNo, mArray(j))
							.AgID = AgID

							If j = 0 Then
								s = .Tariff
							Else
								.Tariff = s
							End If

							If op.long2 = 0 Then
								.Hours = 0
							ElseIf op.long2 = -1 Then 
								.Days = 0
							End If
						End With
					Next
				End If
			End If
		End With
	Next

	Op.SetAllAgents
	Op.renumberRows

	If RowNo = 0 Then RowNo = 1

	Filldepartment3 = RowNo

End Function


