Sub SetDb(ByRef Tr)
	Dim Ag

	Set Ag = Nothing

	With Tr
		If .Agent.Prop(PROP_DB) > 0 Then
			.long1 = .Agent.Prop(PROP_DB)
		ElseIf .orgid > 0 Then
			Set Ag = workarea.agent(.orgID).params
		Else
			Set Ag = workarea.agent(.AgID).params
		End If
		
		If Not Ag Is Nothing Then
			If Ag.Exists(PRM_DB) Then .long1 = Ag.Item(PRM_DB).value2
		End If

	End With
End Sub

