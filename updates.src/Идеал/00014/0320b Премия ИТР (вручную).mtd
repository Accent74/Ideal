Sub Method_OnCalc(Tr)
	With Tr
		If Abs(.sum1) > 0 Then
			.Tariff = .Tariff	 / 100 * .sum1
		End If
		.Sum = .Tariff
		.DbCode = .Long1
	End With
End Sub

Sub Method_OnApply(Tr)
	With Tr
		If .AgID=0 Then Exit Sub
		SetDb(Tr)
		.Sum1 = .Agent.Prop("Премия, %")	
	End With
End Sub