Sub Method_OnCalc(Tr)
	With Tr

		If  .Long1 Then 
			If Not .Long3 Then
				.Tariff = .DependsW.Sum
			Else
				.Tariff = Int(.DependsW.Sum)
			End If
		Else
			.Tariff = 0
		End If

		.Sum = .Tariff
	End With

End Sub

Sub Method_OnApply(Tr)
	Tr.Long1 = True
End Sub