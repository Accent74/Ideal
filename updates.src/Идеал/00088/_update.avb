Sub update_metodth(updater)
	If updater.fail Then Exit Sub

	UpdateCodeScript "2501", "2501 Военный сбор 1,5%.mtd", Updater
	If Not updater.fail Then UpdateCodeScript "2401", "2401 НДФЛ.mtd", Updater

End Sub
