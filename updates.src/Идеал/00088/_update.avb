'
'----
Sub SetCodeSerivice(updater)
	Dim CodeID, Code

	If updater.fail Then Exit Sub

	CodeID = Workarea.GetCodeID("2400а")
	If CodeID <> 0 Then
		Set Code = Workarea.Code(CodeID)
		Code.IsService = False
		Code.Save
	Else
		updater.writelog "Метод 2400a не найден."
	End If

	CodeID = Workarea.GetCodeID("2410а")
	If CodeID <> 0 Then
		Set Code = Workarea.Code(CodeID)
		Code.IsService = False
		Code.Save
	Else
		updater.writelog "Метод 2410a не найден."
	End If

	CodeID = Workarea.GetCodeID("2440")
	If CodeID <> 0 Then
		Set Code = Workarea.Code(CodeID)
		Code.IsService = False
		Code.Save
	Else
		updater.writelog "Метод 2410a не найден."
	End If


End Sub
