Sub Method_OnCalc(Tr)
	Dim s

	With Tr
		.Tariff = .DependsW.Sum
		s = Round2(.Tariff * .Sum2 / 100, 2)
		.Sum1 = s
		.Sum = s
	End With

End Sub

Sub Method_OnApply(Tr)
	With Tr
		If .CPeriod.Year > 2006 Then
			.Sum2 = 15	' 15% 		ставка подоходного налога
		Else
			.Sum2 = 13	' 13% 		ставка подоходного налога
		End If
	End With
End Sub
