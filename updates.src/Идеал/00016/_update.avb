	WorkArea.Code(GetIDByCode("0240п")).SetScript(GetTextFromFile("0240п Выходные и праздничные (%).mtd"))
	WorkArea.Code(GetIDByCode("0250w")).SetScript(GetTextFromFile("0250w Выходные и праздничные (тариф).mtd"))
	WorkArea.Code(GetIDByCode("0251w")).SetScript(GetTextFromFile("0251w За совмещение.mtd"))
	WorkArea.Code(GetIDByCode("0410п")).SetScript(GetTextFromFile("0410п Больничные за счет предприятия.mtd"))
	WorkArea.Code(GetIDByCode("0420п")).SetScript(GetTextFromFile("0420п Больничные соцстрах.mtd"))

	Dim mtdID, mtdID2, ID

	If GetIDByCode("0430") = 0 Then
		mtdID 	= (WorkArea.Codes.Create (101, "0430", "Больничные по беременности (без)")).ID
		MtdParent mtdID, GetIDByName("04 Больничные")		
	End If
	If GetIDByCode("0430w") = 0 Then
		mtdID  = GetIDByCode("0430")
		mtdID2 = (WorkArea.Codes.Create (200, "0430w", "Больничные по беременности (без)")).ID
		MtdParent mtdID2, mtdID

		ID = GetIDByCode("0430w")
