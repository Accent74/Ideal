	If GetIDByCode("0440") = 0 Then
		mtdID = (WorkArea.Codes.Create (101, "0440", "Больничные по уходу за ребёнком (CC)")).ID
		MtdParent mtdID, GetIDByName("04 Больничные")		
	End If
	If GetIDByCode("0440w") = 0 Then
		mtdID 	= GetIDByCode("0440")
		mtdID2 = (WorkArea.Codes.Create (200, "0440w", "Больничные по уходу за ребёнком (CC)")).ID
